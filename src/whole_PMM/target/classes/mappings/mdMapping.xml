<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">	
  <!-- 쿼리가 담기는 설정 파일이다 -->
  
  <mapper namespace="Md">
	  <insert id="insertMd" parameterType="md"> <!-- DAO에서 BrandVO vo(파라미터)에 담아져있기에 parameterType="Brand"생략가능함 -->
	  <![CDATA[
	  		insert into md(md_no, bm_no, p_no) 
	  		values ((select nvl(max(md_no),0)+1 from md), #{bm_no}, #{p_no})
	  ]]>
	  </insert>	
	  <!-- '<', '>'는 비교 연산자로 인식하지 않고 여기에서는 꺽쇠로 본다. 설정을 <![CDATA[]]>로 --> <!-- // SQL문 - nvl: Null값이면 0으로 실행해라 -->
	  <!-- ${}는 변수를 바로 가져온다. #{}은 실행되어지는 시점에 변수를 가져온다. 둘이 같다고 생각해도 상관없다. -->
  	  
	  <!-- <select id="getBrandList_T" resultType="Brand">	resultType="Brand" 반환받는 타입을 명시하고 있어야 한다. 짧게 별명alias로 Brand로
	  <![CDATA[
	  	select * from Brand where title like '%'||#{searchKeyword}||'%' order by seq desc
	  ]]>
	  </select>
	  
	   
	  <select id="getBrandList_C" resultType="Brand">
	  <![CDATA[
	  	select * from Brand where content like '%'||#{searchKeyword}||'%' order by seq desc
	  ]]>
	  </select> -->
	  
	  <!-- Mybatis가 제공하는 동적(Dynamic) SQL 쿼리문을 추가적으로 제공해줌. Spring(X) -->
	  <!-- resultType="Brand" 반환받는 타입을 명시하고 있어야 한다. 짧게 별명alias로 Brand로 -->
	  <select id="getMdList" resultType="md">	
		select * 
	  	from md 
	  	where 1 = 1
	  	<if test="searchCondition == 'MD_NO'">
	  		and MD_NO like '%'||#{searchKeyword}||'%' 
	  	</if>
	  	<if test="searchCondition == 'BM_NO'">
	  		and BM_NO like '%'||#{searchKeyword}||'%' 
	  	</if>
	  	order by MD_NO desc
	  </select>
	  
	  
	  <!-- List 보여주기 -->
	  <select id="getMd" resultType="md">
	  <![CDATA[
	  	select * from md where md_no = #{md_no}
	  ]]>
	  </select>
	  
	  
	  <update id="updateMd">
	  <![CDATA[
	  	update md set md_no = #{md_no}, bm_no = #{bm_no}, p_no = #{p_no} where md_no = #{md_no}
	  ]]>
	  </update>
	  
	  
	  <delete id="deleteMd">
	  <![CDATA[
	  	delete from md where md_no = #{md_no}
	  ]]>
	  </delete>
	  
  </mapper>
	  
    	
			
	